<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    android:paddingStart="0dp">

    <TextView
        android:id="@+id/gFLetter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contact_icon_shape"
        android:gravity="center"
        android:text="J"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_weight="0.2"
    >    <TextView
        android:id="@+id/gContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/gFLetter"
        android:layout_toRightOf="@id/gFLetter"
    android:maxLength="25"
        android:ellipsize="end"
        android:text="wwwwwwwwwwwwwwwwwwwwwwrwww"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/gContactNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/gFLetter"
        android:layout_toRightOf="@id/gFLetter"
        android:maxLength="20"
        android:text="+923114254886"
        android:textColor="#777"
        android:textSize="14sp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_weight="0.9">
    <CheckBox
        android:id="@+id/checkb"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@drawable/custom_checkbox" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/gFLetter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray"
        android:foregroundGravity="center" />

</RelativeLayout>