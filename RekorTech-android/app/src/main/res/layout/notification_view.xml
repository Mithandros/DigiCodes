<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="#D3D3D3"
    android:paddingEnd="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingStart="0dp"
    android:id="@+id/notification_background"
    >
    <TextView
        android:id="@+id/comFLetter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contact_icon_shape"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat"
        android:text="J"
        android:textColor="#ffffff"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:id="@+id/top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/comName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/comFLetter"
                android:layout_toRightOf="@id/comFLetter"
                android:minWidth="10dp"
                android:layout_weight="0.3"
                android:fontFamily="@font/montserrat"
                android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"  />

<LinearLayout
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_weight="0.7">
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:button="@drawable/notification_checkbox"
                android:fontFamily="@font/montserrat"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />
</LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/checked"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/top"
       >

            <TextView
                android:id="@+id/time"
                android:layout_weight="0.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comName"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/comFLetter"
                android:layout_toRightOf="@id/comFLetter"
                android:text="+92315-0138117"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/notification_background"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:background="@android:color/darker_gray"
        android:foregroundGravity="center" />
</RelativeLayout>
